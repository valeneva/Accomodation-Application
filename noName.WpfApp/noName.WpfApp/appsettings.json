{

  "serilog": {
    "using": [
      "Serilog.Sinks.File",
      "Serilog.Sinks.Console"
    ],
    "enrich": [
      "FromLogContext"
    ],
    "minimumLevel": "Verbose",
    "writeTo": [
      {
        "name": "Logger",
        "args": {
          "configureLogger": {
            "writeTo": [
              {
                "name": "File",
                "args": {
                  "path": ".\\logs\\log.log",
                  "rollingInterval": "Day",
                  "encoding": "System.Text.Encoding::UTF8",
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
              },
              {
                "name": "Console",
                "args": {
                  "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] {Message:lj}{NewLine}{Exception}"
                }
              }
            ]
          }
        }
      }
    ]
  }
}
